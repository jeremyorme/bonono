{
    "name": "bonono",
    "version": "0.3.0",
    "description": "Peer-to-peer database component",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/bonono/bonono.esm.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jeremyorme/bonono"
    },
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build": "stencil build --docs & typedoc --plugin typedoc-plugin-markdown --plugin typedoc-plugin-merge-modules",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "unit": "stencil test --spec",
        "generate": "stencil generate"
    },
    "dependencies": {
        "@stencil/core": "^2.13.0",
        "@stencil/react-output-target": "^0.3.1",
        "@types/crypto-js": "^4.1.1",
        "ajv": "^8.11.0",
        "base58-js": "^1.0.4",
        "crypto-js": "^4.1.1",
        "ipfs": "^0.61.0",
        "ipfs-pubsub-peer-monitor": "^0.0.10",
        "level": "^8.0.0",
        "noble-ed25519": "^1.2.6",
        "orbit-db-io": "^1.0.2"
    },
    "devDependencies": {
        "@types/jest": "^27.0.3",
        "jest": "^27.4.5",
        "jest-cli": "^27.4.5",
        "puppeteer": "^10.0.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "typedoc": "^0.23.10",
        "typedoc-plugin-markdown": "^3.13.4",
        "typedoc-plugin-merge-modules": "^4.0.1"
    },
    "license": "MIT"
}
